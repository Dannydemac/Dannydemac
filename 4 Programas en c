//Programa 1:
#include <stdio.h>

int main() {
	int i, j;
    int mat[6][4];
    int cont = 1;
    
    for (i = 0; i < 6; ++i) {
        for (j = 0; j < 4; ++j) {
            mat[i][j] = cont++;
        }
    }

    for (i = 0; i < 6; ++i) {
        if (i % 2 == 0) {
            for (j = 0; j < 4; ++j) {
                printf("%i ", mat[i][j]);
            }
        } else {
            for (j = 3; j >= 0; --j) {
                printf("%i ", mat[i][j]);
            }
        }
        printf("\n");
    }

    return 0;
}


//Programa 2:
#include <stdio.h>

int main() {
    int i, j;
	int fil = 6;
	int col = 6;
    int mat[fil][col];

    for (i = 0; i < fil; ++i) {
        for (j = 0; j < col; ++j) {
            mat[i][j] = i * col + j + 1;
        }
    }

    for (i = 0; i < fil; ++i) {
        for (j = 0; j < col; ++j) {
            if (i == 0 || i == fil - 1 || j == col - 1 - i) {
                printf("%i\t", mat[i][j]);
            } else {
                printf(" \t"); 
            }
        }
        printf("\n");
    }

    return 0;
}


//Programa 3:
#include <stdio.h>

int main() {
	int i, j;
    int mat[3][4];
	int cont = 4;
    
    for (i = 0; i < 3; ++i) {
        for (j = 0; j < 4; ++j) {
            mat[i][j] = cont - j;
        }
    }

    for (i = 0; i < 3; ++i) {
        for (j = 0; j < 4; ++j) {
            printf("%i ",mat[i][j]);
        }
        printf("\n");
    }

    return 0;
}


/Programa 4:
#include <stdio.h>

int main() {
	int i, j;
    int mat[6][6];
    int desde = 16;
    
    
    for (i = 0; i < 6; ++i) {
        for (j = 0; j < 6; ++j) {
            if (i == 0 || i == 5 || i + j == 5) {
                mat[i][j] = desde;
                --desde;
            } else {
                mat[i][j] = 0;
            }
        }
    }

    for (i = 0; i < 6; ++i) {
        for (j = 0; j < 6; ++j) {
            if (mat[i][j] == 0) {
                printf("   ");
            } else {
                printf("%i ", mat[i][j]);
            }
        }
        printf("\n");
    }

    return 0;
}
